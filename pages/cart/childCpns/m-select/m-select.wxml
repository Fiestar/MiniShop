<!--pages/cart/childCpns/m-select/m-select.wxml-->
<view class="cart-list-item">
  <view class="item-check-icon">
    <m-check-icon bindtap="onClick" data-index="{{index}}" isChecked="{{goods.checked}}"></m-check-icon>
  </view>

  <view class="item-image">
   <image src="{{goods.imageUrl}}" mode="aspectFill"></image>
  </view>

  <view class="item-info">
    <view class="title">{{goods.title}}</view>
    <view class="desc">{{goods.desc}}</view>
    <view class="price-count">
      <view class="price">ï¿¥{{goods.price}}</view>
      <view class="count">x{{goods.count}}</view>
    </view>
  </view>
</view>